{"id":"task_open_logs_highlight_error_v1","title":"Open logs & extract latest error","tags":["logs","debug","extract","create_bug"],"description":"Open the log viewer, find the most recent ERROR or FATAL entry, highlight the error block, copy the error plus 10 lines of context to the clipboard, and create a concise bug report draft.","steps":[{"step_label":"open_log_viewer","command":{"api":"window.open","args":{"app":"log_viewer"}},"ui_id":"app.logviewer.open","expected_state":{"focused":"log_viewer"}},{"step_label":"fetch_latest_error","command":{"api":"log.query","args":{"level":["ERROR","FATAL"],"limit":1,"sort":"desc","fields":["timestamp","message","file","line","full_text"]}},"ui_id":"log.query.latest_error","expected_state":{"latest_error_found":true}},{"step_label":"highlight_error","command":{"api":"log_viewer.highlight","args":{"file":"${steps.fetch_latest_error.result.file}","line":"${steps.fetch_latest_error.result.line}","context_lines":10}},"ui_id":"app.logviewer.highlight_error","expected_state":{"selection":"error_block"}},{"step_label":"copy_to_clipboard","command":{"api":"clipboard.copy","args":{"text":"${steps.fetch_latest_error.result.full_text_with_context}"}},"ui_id":"system.clipboard.copy","expected_state":{"clipboard":"contains_error_block"}},{"step_label":"create_bug_draft","command":{"api":"notes.create","args":{"title":"Bug: ${steps.fetch_latest_error.result.message_short}","body":"Summary:\n${steps.fetch_latest_error.result.message}\n\nContext:\n${steps.fetch_latest_error.result.full_text_with_context}\n\nSteps to reproduce:\n1. ..."} },"ui_id":"app.notes.create","expected_state":{"note_created":true}}]}
{"id":"task_move_file_v1","title":"Move file to project folder","tags":["file","fileops","move"],"description":"Move a file to a target folder with confirmation.","steps":[{"step_label":"check_file_exists","command":{"api":"state.validate","args":{"path":"${slots.source_path}","exists":true}},"ui_id":"state.file.exists","expected_state":{"exists":true}},{"step_label":"dry_run_move","command":{"api":"file.move","args":{"src":"${slots.source_path}","dst":"${slots.target_path}"} },"ui_id":"fs.file.move.dryrun","expected_state":{"would_move":true}},{"step_label":"execute_move","command":{"api":"file.move","args":{"src":"${slots.source_path}","dst":"${slots.target_path}"}},"ui_id":"fs.file.move","expected_state":{"moved":true,"confirm":true}}]}
{"id":"task_mute_notifications_v1","title":"Mute notifications for duration","tags":["settings","notifications"],"description":"Enable Do Not Disturb for the given duration.","steps":[{"step_label":"open_settings","command":{"api":"window.open","args":{"app":"settings","section":"notifications"}},"ui_id":"app.settings.notifications","expected_state":{"focused":"settings_notifications"}},{"step_label":"set_dnd","command":{"api":"settings.toggle","args":{"key":"do_not_disturb","value":true,"duration_minutes":"${slots.duration_minutes}"}},"ui_id":"settings.notifications.dnd","expected_state":{"do_not_disturb":true}},{"step_label":"confirm","command":{"api":"state.validate","args":{"do_not_disturb":true}},"ui_id":"state.validate.dnd","expected_state":{"do_not_disturb":true}}]}
{"id":"task_toggle_wifi_v1","title":"Toggle Wi-Fi","tags":["network","settings"],"description":"Toggle Wi-Fi off with validation.","steps":[{"step_label":"open_network","command":{"api":"window.open","args":{"app":"network_settings"}},"ui_id":"app.network.open","expected_state":{"focused":"network_settings"}},{"step_label":"set_wifi","command":{"api":"network.set","args":{"interface":"${slots.interface}","enabled":false}},"ui_id":"net.if.set","expected_state":{"wifi_enabled":false,"confirm":true}},{"step_label":"validate","command":{"api":"state.validate","args":{"network":{"wifi":false}}},"ui_id":"state.validate.network","expected_state":{"network":{"wifi":false}}}]}
{"id":"task_create_bug_from_error_v1","title":"Create bug report from crash","tags":["bug","report","logs"],"description":"Extract crash log, stack, and context then create a bug note.","steps":[{"step_label":"find_crash","command":{"api":"log.query","args":{"level":["FATAL","CRITICAL"],"limit":1,"sort":"desc","fields":["timestamp","message","file","line","stack"]}},"ui_id":"log.query.crash","expected_state":{"crash_found":true}},{"step_label":"extract_stack","command":{"api":"log_viewer.highlight","args":{"file":"${steps.find_crash.result.file}","line":"${steps.find_crash.result.line}","context_lines":20}},"ui_id":"app.logviewer.highlight_stack","expected_state":{"selection":"stack_block"}},{"step_label":"create_issue","command":{"api":"notes.create","args":{"title":"Crash: ${steps.find_crash.result.message_short}","body":"Timestamp: ${steps.find_crash.result.timestamp}\n\nStack:\n${steps.find_crash.result.stack}\n\nSteps to reproduce:\n1. ..."} },"ui_id":"app.issues.create","expected_state":{"note_created":true}}]}
